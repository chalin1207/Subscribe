<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dde1ee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >


    <EditText
        android:id="@+id/et_hallnum"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="60dip"
        android:background="@drawable/edit_top"
         android:textSize="6pt"
        android:paddingLeft="75dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_hallnum"
        android:layout_alignTop="@id/et_hallnum"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="大堂预约数"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

    <EditText
        android:id="@+id/et_roomnum"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_hallnum"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/edit_centent"
         android:textSize="6pt"
        android:paddingLeft="75dip" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_roomnum"
        android:layout_alignTop="@id/et_roomnum"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="房间预约数"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

     <EditText
        android:id="@+id/et_starttime"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_roomnum"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/edit_centent"
         android:textSize="6pt"
        android:paddingLeft="88dip" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_starttime"
        android:layout_alignTop="@id/et_starttime"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="预约启动时间"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />
    
     <EditText
        android:id="@+id/et_endtime"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_starttime"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/edit_down"
          android:textSize="6pt"
        android:paddingLeft="88dip" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_endtime"
        android:layout_alignTop="@id/et_endtime"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="预约结束时间"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

    <Button
        android:id="@+id/businness_execute"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_alignLeft="@id/et_hallnum"
        android:layout_alignRight="@id/et_hallnum"
        android:layout_below="@id/et_endtime"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_style1"
        android:text="执行"
        android:textColor="@android:color/white" />

</RelativeLayout>