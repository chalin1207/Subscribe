<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dde1ee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Loginctivity" >


    <EditText
        android:id="@+id/et_Type"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="90dip"
         android:textSize="6pt"
        android:background="@drawable/edit_top"
        android:paddingLeft="50dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_Type"
        android:layout_alignTop="@id/et_Type"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="类型"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

    <EditText
        android:id="@+id/et_Username"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_Type"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
         android:textSize="6pt"
        android:background="@drawable/edit_centent"
        android:paddingLeft="50dip" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_Username"
        android:layout_alignTop="@id/et_Username"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="账号"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

    
     <EditText
        android:id="@+id/et_Password"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_Username"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/edit_down"
         android:textSize="6pt"
         android:inputType="textPassword"
        android:paddingLeft="50dip" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_Password"
        android:layout_alignTop="@id/et_Password"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="密码"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />
    
    <ImageButton
        android:id="@+id/ImgBtn_select"
        android:layout_width="22dip"
        android:layout_height="20dip"
        android:layout_alignBottom="@+id/et_Type"
        android:layout_alignRight="@+id/et_Type"
        android:layout_marginBottom="8dip"
        android:layout_marginRight="3dip"
        android:background="@drawable/indicator_down" />

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_alignLeft="@id/et_Type"
        android:layout_alignRight="@id/et_Type"
        android:layout_below="@id/et_Password"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_style"
        android:text="登录"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/Type_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_Type"
        android:layout_alignRight="@id/et_Type"
        android:layout_below="@id/et_Type"
        android:divider="#aaaaaa"
        android:dividerHeight="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cb_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_Login"
        android:layout_below="@+id/btn_Login"
        android:layout_marginTop="26dp"
        android:text="自动登录"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/bt_Registr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cb_remember"
        android:layout_alignRight="@+id/btn_Login"
        android:layout_alignTop="@+id/cb_remember"
        android:text="注册新用户 >"
        android:textSize="10dp" 
         android:background="@drawable/btn_style"
        android:textColor="@android:color/white" 
        />

</RelativeLayout>