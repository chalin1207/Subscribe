<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dde1ee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >


    <EditText
        android:id="@+id/et_companyname"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="60dip"
        android:background="@drawable/edit_top"
         android:textSize="6pt"
        android:paddingLeft="65dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_companyname"
        android:layout_alignTop="@id/et_companyname"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        
        android:text="公司名称"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

    <EditText
        android:id="@+id/et_company_username"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_companyname"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/edit_centent"
         android:textSize="6pt"
        android:paddingLeft="65dip" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_company_username"
        android:layout_alignTop="@id/et_company_username"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="注册用户"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

     <EditText
        android:id="@+id/et_company_password"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_company_username"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
         android:inputType="textPassword"
        android:background="@drawable/edit_centent"
         android:textSize="6pt"
        android:paddingLeft="65dip" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_company_password"
        android:layout_alignTop="@id/et_company_password"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="输入密码"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />
    
     <EditText
        android:id="@+id/et_company_password2"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/et_company_password"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/edit_down"
         android:inputType="textPassword"
          android:textSize="6pt"
        android:paddingLeft="65dip" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_company_password2"
        android:layout_alignTop="@id/et_company_password2"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="9dip"
        android:text="再输密码"
        android:textColor="@android:color/darker_gray"
        android:textSize="6pt" />

    <Button
        android:id="@+id/companyregistr"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_alignLeft="@id/et_companyname"
        android:layout_alignRight="@id/et_companyname"
        android:layout_below="@id/et_company_password2"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_style1"
        android:text="注册"
        android:textColor="@android:color/white" />



    <Button
        android:id="@+id/companycancel"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_alignLeft="@id/et_companyname"
        android:layout_alignRight="@id/et_companyname"
        android:layout_below="@id/companyregistr"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_style1"
        android:text="取消"
        android:textColor="@android:color/white" />

</RelativeLayout>